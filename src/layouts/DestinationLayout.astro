---
  // You can import components from any supported Framework here!
import BaseHead from '../components/BaseHead.astro'
import Header from '../components/Header.astro'
import Tabs from '../components/Tabs'

const { description, title, tabs } = Astro.props
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />    
  </head>
  <body class="bg bg-destination">
    <Header navId="destination" />

    <main>
      <div class="container grid">
        <h5 class="page-heading">
          <span class="page-heading__number">01</span>
          <span class="page-heading__text">Pick your destination</span>
        </h5>					

				<Tabs tabs={tabs} client:visible></Tabs>
      </div>
    </main>
  </body>
</html>

<style lang="scss">
  @import '../styles/variables.scss';

  .container {    
    padding-block: 4rem 0;

    @media (min-width: $bp-tablet) and (max-width: $bp-desktop) {      
      padding-block: 2.5rem 0;
    }

    @media (min-width: $bp-desktop) {
      padding-block: 4.75rem 0;
    }
  }
</style>